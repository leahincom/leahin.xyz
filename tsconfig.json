{
  "compilerOptions": {
    "target": "esnext",                                 
    "lib": ["dom", "esnext"],                                       
    "jsx": "react",                               
    "module": "esnext",                               
    "moduleResolution": "node",                      
    "allowJs": true,                                  
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "gatsby-theme-stitches/src/*": ["./src/styles/*"]
    }                                
  },
  "include": ["./*.ts", "./src/*", "./plugins/*"]
}
